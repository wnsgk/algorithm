//끝나는 시간으로 정렬한 뒤에 끝나는 시간이 짧으면서 겹치지 않는 것을 greedy로 고름

#include <iostream>
#include <vector>
#include <algorithm>

using namespace std;

int n;

int main()
{
    cin.sync_with_stdio(false);
    cin.tie(0);
    cout.tie(0);
    int x, y;
    cin>>n;
    
    vector<pair<int,int>> info(n);
    for(int i = 0; i < n; i++){
        cin>>y>>x;
        info[i] = make_pair(x,y);
    }
    sort(info.begin(), info.end());
    int prev = 0, ans = 0;
    for(int i = 0; i < n; i++){         
        if(info[i].second >= prev)
        {
            ans++;
            prev = info[i].first;
        }
    }
    cout<<ans;
    

    return 0;
}
